<header class="navbar navbar-fixed-top" style="background-color: #008080;">
  <div class="container">
    <%= link_to "Task App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <%= link_to "トップ", root_path, class: "logo1" %>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <%= link_to "利用者一覧", users_path, class: "logo1" %>
          <% end %>
          <%= link_to "タスク作成", new_user_task_path(current_user), class: "logo1" %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle header-list" data-toggle="dropdown" id="dropdown-title">
              <%= current_user.name %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="dropdown-header">ユーザー</li>
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "設定", '#' %></li>
              <li class="dropdown-header">タスク</li>
              <li><%= link_to "タスク一覧", user_tasks_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <%= link_to "ログイン", login_path, class: "logo1" %>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
