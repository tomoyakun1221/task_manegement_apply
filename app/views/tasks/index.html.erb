<% provide(:title, current_user.name) %>
<div class="container">
  <h1>管理者のタスク一覧</h1>
 
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%=link_to "タスク新規作成", new_user_task_path, class:"btn btn-lg btn-primary pull-right" %>
      <table class="table table-hover" id="table-tasks">
        <thead>
          <th><%= User.human_attribute_name :name %></th>
          <th><%= User.human_attribute_name :created_at %></th>
          <th></th>
        </thead>

        <tbody>
          <% @tasks.each do |task| %>
            <div class="tasks-index-item">
              <tr>
                <td><%= link_to task.task_name, user_tasks_path %></td>
                <td><%= task.created_at %></td>
                <td><%= link_to "編集", edit_user_task_path(@user, task), remote: true, class:"btn btn-success col-md-offset-8" %></td>
                <td><%= link_to "削除", user_task_path(@user, task), method: :delete,
                    data: { confirm: "削除してよろしいですか？" }, class:"btn btn-danger" %></td>
              </tr>      
            </div>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>