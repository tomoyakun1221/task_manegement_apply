<% provide(:title, current_user.name) %>
<div class="container">
  <h1><%= @user.name %>のタスク一覧</h1>
 
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%=link_to "タスク新規作成", new_user_task_path(@user), class:"btn btn-lg btn-primary pull-right" %>
      <table class="table table-hover" id="table-tasks">
        <thead>
          <tr>
            <th><%= Task.human_attribute_name :task_name %></th>
            <th><%= Task.human_attribute_name :created_at %></th>
          </tr>
        </thead>

        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td style="font-size : 20px;"><%= link_to task.task_name, user_task_path(@user, task) %></td>
              <td><%= l(task.created_at, format: :long) %></td>
              <td><%= link_to "編集", edit_user_task_path(@user, task), class:"btn btn-success col-md-offset-8" %></td>
              <td><%= link_to "削除", user_task_path(@user, task), method: :delete,
                      data: { confirm: "#{task.task_name}を削除してよろしいですか？" }, class:"btn btn-danger" %></td>
            </tr>      
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>