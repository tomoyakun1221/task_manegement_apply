<% provide(:title, 'Edit Task') %>
<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_task_path(@user, @task), local: true, method: :patch) do |f| %>
      <%= render partial: 'shared/error_messages', locals: { object: @task }  %>

      <%= f.label :task_name, "名前", class: "label-task--edit" %>
      <%= f.text_field :task_name, class: "form-control" %>

      <%= f.label :task_detail, "詳細", class: "label-task--edit" %>
      <%= f.text_area :task_detail, rows:"5", class: "form-control" %>

      <%= f.submit "更新", class: "btn btn-primary btn-form" %>
      <%= link_to "キャンセル", user_tasks_path(@user), class:"btn btn-default btn-form" %>
    <% end %>
  </div>
</div>