<% provide(:title, 'New Task') %>
<h1>タスク新規作成</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_tasks_path(@user), local: true) do |f| %>
      <%= render 'shared/error_messages', object: @user %>

      <%= f.label :task_name, "名前", class: "label-form" %>
      <%= f.text_field :task_name, class: "form-control" %>

      <%= f.label :task_detail, "詳細", class: "label-form" %>
      <%= f.text_area :task_detail, rows:"5", class: "form-control" %>
      
      <%= f.submit "新規作成", class: "btn btm-lg btn-primary btn-form" %>
    <% end %>
  </div>
</div>