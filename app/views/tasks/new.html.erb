<% provide(:title, "New Task") %>
<div class="container">
  <h1>タスク新規作成</h1>
  
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_with(model: @task, url: user_tasks_path(@user), local: true) do |f| %>

        <%= f.label :task_name, "名前", class: "label-login" %>
        <%= f.text_field :task_name, class: 'form-control' %>
    
        <%= f.label :task_detail, "詳細", class: "label-login" %>
        <%= f.text_area :task_detail, row: 5, class: 'form-control' %>
        
        <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-form" %>
      <% end %>
    </div>
  </div>
</div>